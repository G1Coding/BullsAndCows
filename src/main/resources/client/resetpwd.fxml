<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.Controller">
   <children>
      <ImageView fitHeight="650.0" fitWidth="1000.0" pickOnBounds="true">
         <image>
            <Image url="@../images/resetpwd.jpg" />
