            <Font size="37.0" />
         </font>
      </Text>
      <ToggleButton fx:id="backBtn" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#moveBackPage" prefHeight="54.0" prefWidth="222.0" text="Login 하러 가기" />
