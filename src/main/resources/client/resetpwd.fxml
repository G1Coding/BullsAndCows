                        <TextField fx:id="txtNameForSearchId" onAction="#searchIdBtnClicked" GridPane.columnIndex="1" />
                        <DatePicker fx:id="userBirthForSearchId" onAction="#searchIdBtnClicked" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
                  <GridPane prefHeight="137.0" prefWidth="819.0">
                     <children>
                        <Label text="아이디" />
                        <Label text="생년월일" GridPane.rowIndex="2" />
