            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="1000.0" spacing="350.0">
               <children>
                  <ToggleButton fx:id="searchIdBtn" mnemonicParsing="false" onAction="#searchIdBtnClicked" prefHeight="43.0" prefWidth="124.0" text="찾기" />
                  <ToggleButton fx:id="resetPasswordBtn" mnemonicParsing="false" onAction="#resetPwdBtnClicked" prefHeight="43.0" prefWidth="204.0" text="비밀번호 초기화" />
