      </ImageView>
      <VBox layoutX="19.0" layoutY="270.0" prefHeight="364.0" prefWidth="963.0">
         <children>
            <HBox alignment="TOP_CENTER" blendMode="OVERLAY" prefHeight="91.0" prefWidth="963.0" spacing="300.0">
               <children>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="아이디 찾기">
                     <font>
                        <Font name="System Bold" size="26.0" />
                     </font>
                  </Text>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="비밀번호 초기화">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <HBox layoutX="14.0" layoutY="306.0" prefHeight="236.0" prefWidth="967.0" spacing="100.0">
               <children>
                  <GridPane prefHeight="251.0" prefWidth="942.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="136.0" minWidth="10.0" prefWidth="136.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="135.0" minWidth="10.0" prefWidth="135.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints maxHeight="199.0" minHeight="10.0" prefHeight="75.0" vgrow="SOMETIMES" />
